<Alloy>
	<View id="createView" layout="vertical">
		<View class="tikklrHeader">
			<Button class="backButton" onClick="backClicked" />
			<Label class="tikklrHeaderLabel" text="CREATE" />
		</View>
		<View id="photo" onClick="cameraClicked" class="createBox">
			<View id="photoCircle" class="photoCircle"/>
			<View backgroundImage="camera.png" class="createImage"/>
		</View>
		<View id="video" onClick="libraryClicked" top="5" class="createBox">
			<View id="videoCircle" class="videoCircle"/>
			<View backgroundImage="film-roll.png" class="createImage"/>
		</View>	
	</View>
</Alloy>
